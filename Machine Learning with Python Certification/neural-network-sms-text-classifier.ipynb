train_file_path = "train-data.tsv"
test_file_path = "valid-data.tsv"

# Load and preprocess the data
train_data = pd.read_csv(train_file_path, sep='\t', header=None, names=['label', 'message'])
test_data = pd.read_csv(test_file_path, sep='\t', header=None, names=['label', 'message'])

# Convert labels to binary (0 for ham, 1 for spam)
train_labels = (train_data['label'] == 'spam').astype(int).values
test_labels = (test_data['label'] == 'spam').astype(int).values

# Create a text vectorisation layer
vocab_size = 1000
embedding_dim = 16
max_length = 100

vectorizer = keras.layers.TextVectorization(max_tokens=vocab_size, output_mode='int', output_sequence_length=max_length)
vectorizer.adapt(train_data['message'].values)

# Build the model
model = keras.Sequential([
    keras.layers.Embedding(vocab_size, embedding_dim),
    keras.layers.Bidirectional(keras.layers.LSTM(64)),
    keras.layers.Dense(64, activation='relu'),
    keras.layers.Dropout(0.5),
    keras.layers.Dense(1, activation='sigmoid')
])

model.compile(loss='binary_crossentropy', optimizer='adam', metrics=['accuracy'])

# Train the model
model.fit(vectorizer(train_data['message'].values), train_labels, epochs=10, validation_data=(vectorizer(test_data['message'].values), test_labels), verbose=1)

# Function to predict messages based on model (should return list containing prediction and label, ex. [0.008318834938108921, 'ham'])
def predict_message(pred_text):
    # Vectorise the input text
    vectorized_text = vectorizer(np.array([pred_text]))

    # Make prediction
    prediction = model.predict(vectorized_text, verbose=0)[0][0]

    # Determine label
    label = 'spam' if prediction > 0.5 else 'ham'

    return [prediction, label]

pred_text = "how are you doing today?"

prediction = predict_message(pred_text)
print(prediction)

