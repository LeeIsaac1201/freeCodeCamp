# Import data
!wget https://cdn.freecodecamp.org/project-data/health-costs/insurance.csv
dataset = pd.read_csv('insurance.csv')
dataset.tail()

# Preprocessing: Convert categorical to numeric, split 80/20, scale features
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler

# Make a working copy
df = dataset.copy()

# Convert categorical columns (sex, smoker, region) to numeric using one-hot encoding
# drop_first=True to avoid multicollinearity for simple models
df = pd.get_dummies(df, drop_first=True)

# Split features and labels
X = df.drop('expenses', axis=1)
y = df['expenses']

# 80% train, 20% test
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.20, random_state=42)

# Scale numeric features (important for neural nets)
scaler = StandardScaler()
X_train_scaled = scaler.fit_transform(X_train)
X_test_scaled  = scaler.transform(X_test)

# Create the variables that the grader and test cell expects
train_dataset = X_train_scaled.astype(np.float32)
test_dataset  = X_test_scaled.astype(np.float32)
train_labels  = y_train.values.astype(np.float32)
test_labels   = y_test.values.astype(np.float32)

# Quick sanity prints
print("train_dataset shape:", train_dataset.shape)
print("test_dataset shape:", test_dataset.shape)
print("train_labels shape:", train_labels.shape)

# Build a regression model
def build_model(input_shape):
    model = keras.Sequential([
        layers.Input(shape=(input_shape,)),
        layers.Dense(128, activation='relu'),
        layers.Dense(64, activation='relu'),
        layers.Dense(32, activation='relu'),
        layers.Dense(1)  # Single continuous output
    ])
    # Include mean squared error (mse) in metrics so evaluate() returns (loss, mean absolute error (mae), mse)
    model.compile(optimizer=keras.optimizers.Adam(1e-3),
                  loss='mse',
                  metrics=['mae', 'mse'])
    return model

model = build_model(train_dataset.shape[1])
model.summary()

# Train with early stopping on validation MAE
early_stop = keras.callbacks.EarlyStopping(monitor='val_mae', patience=20, restore_best_weights=True)

history = model.fit(
    train_dataset, train_labels,
    validation_split=0.2,  # 20% of training data used for validation
    epochs=500,
    batch_size=32,
    callbacks=[early_stop],
    verbose=2
)

# Plot training history: MAE
plt.figure(figsize=(8,4))
plt.plot(history.history['mae'], label='train MAE')
plt.plot(history.history['val_mae'], label='val MAE')
plt.xlabel('Epoch')
plt.ylabel('MAE')
plt.legend()
plt.grid(True)
plt.show()

# RUN THIS CELL TO TEST YOUR MODEL. DO NOT MODIFY CONTENTS.
# Test model by checking how well the model generalizes using the test set.
loss, mae, mse = model.evaluate(test_dataset, test_labels, verbose=2)

print("Testing set Mean Abs Error: {:5.2f} expenses".format(mae))

if mae < 3500:
